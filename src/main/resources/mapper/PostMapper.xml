<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.todo.mapper.PostMapper">
    <select id="findAllPosts" resultType="com.example.todo.entity.Post">
        SELECT *
        FROM POST
        ORDER BY ID
    </select>
    <select id="getRecentOnePost" resultType="com.example.todo.entity.Post">
        SELECT *
        FROM POST
        ORDER BY CREATED_AT DESC
        LIMIT 1
    </select>
    <select id="findPostById" resultType="com.example.todo.entity.Post" parameterType="int">
        SELECT *
        FROM POST
        WHERE ID = #{id}
    </select>
    <insert id="createPost" parameterType="com.example.todo.entity.Post">
        INSERT INTO POST
        (TITLE, CONTENT)
        VALUES
        (#{title}, #{content})
    </insert>
    <update id="updatePost" parameterType="com.example.todo.dto.PostDto">
        UPDATE POST
        SET
        TITLE = #{post.title},
        CONTENT = #{post.content}
        CREATED_AT = NOW()
        WHERE id = #{id}
    </update>
    <delete id="deletePost" parameterType="int">
        DELETE FROM POST
        WHERE id = #{id}
    </delete>
</mapper>