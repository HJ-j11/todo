<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.todo.mapper.EventMapper">
    <select id="getEvents" resultType="com.example.todo.entity.Event">
        SELECT *
        FROM EVENT
        ORDER BY ID
    </select>
    <select id="getEventById" resultType="com.example.todo.entity.Event" parameterType="int">
        SELECT *
        FROM EVENT
        WHERE ID = #{id}
    </select>
</mapper>